# ==========================================
# API GATEWAY - CONFIG ESTABLE
# ==========================================

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=healthbridge_jwt-secret-dev
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=healthbridge_refresh_secret-dev
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174

# Services URLs (ðŸ”§ Usar nombres de contenedores Docker)
AUTH_SERVICE_URL=http://auth-service:3001
USER_SERVICE_URL=http://user-service:3002
APPOINTMENT_SERVICE_URL=http://appointment-service:3003
#MEDICAL_RECORD_SERVICE_URL=http://medicalRecord-service:3004
NOTIFICATION_SERVICE_URL=http://notification-service:3005
BILLING_SERVICE_URL=http://billing-service:3006
SUBSCRIPTION_SERVICE_URL=http://subscription-service:3007

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug

# Health Check
HEALTH_CHECK_INTERVAL=30000

# Proxy Configuration
PROXY_TIMEOUT=30000
PROXY_CHANGE_ORIGIN=true

# Request Tracking
ENABLE_REQUEST_TRACKING=true
