# =====================================================
# api-gateway/Dockerfile.dev
# Entorno de desarrollo (hot reload con ts-node o nodemon)
# =====================================================

FROM node:18-alpine

WORKDIR /app

# Copiar dependencias
COPY package*.json ./

# Instalar TODAS las dependencias (incluyendo dev)
RUN npm install

# Copiar el resto del c√≥digo
COPY . .

# Exponer el puerto
EXPOSE 3000

# Comando de desarrollo (usa nodemon o ts-node)
CMD ["npm", "run", "dev"]
